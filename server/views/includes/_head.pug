title News Search
meta(charset='utf-8')
meta(content='IE=edge', http-equiv='X-UA-Compatible')
meta(content='A simple react based news search app.', name='description')
meta(content='https://news-search.io', property='og:site_name')
meta(content='@nypinstripes', name='twitter:site')
meta(content='noindex, follow', name='robots')
meta(
  content='width=device-width, height=device-height, initial-scale=1'
  id='viewport'
  name='viewport'
)
link(
  href='/assets/images/favicon.png'
  rel='shortcut icon'
  type='image/vnd.microsoft.icon'
)
link(
  href='/assets/styles/artifacts.css'
  rel='stylesheet'
  type="text/css"
)

include _fonts.pug

if unsupported
  link(
    href='/assets/styles/unsupported.css'
    rel='stylesheet'
    type="text/css"
  )
